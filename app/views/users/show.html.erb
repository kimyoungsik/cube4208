
<table class="table table-striped">
  <thead>
    <tr>
			<th>성명</th>
      <th>email</th>
			<th>status</th>
			<th></th>
    </tr>
  </thead>
  <tbody>
			<tr>
				<td>이름: <%= @user.korean_full_name %></td>
        <td><%= @user.email %></td>
				<td><%= show_status(@user.status) %></td>
				<% if !current_user.team.nil?%>
					<td> <%= @user.team.name %></td>
				<% elsif !current_user.organization.nil?  %>
					<td> <%= @user.organization.name %></td>
				<% else %>
					<td> <%= @user.head_organization.name %></td>
				<% end %>
      </tr>
  </tbody>
</table>


