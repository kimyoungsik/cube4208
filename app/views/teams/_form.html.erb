<%= simple_form_for @team, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Team</legend>

		<%= f.input :name %>
		<%= f.input :organization_id, :collection => Organization.all %>
		<%= f.input :facebook_page %>
		<%= f.input :bank_branch %>
		<%= f.input :account_number %>
		<%= f.input :leader_user_id %>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', teams_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
