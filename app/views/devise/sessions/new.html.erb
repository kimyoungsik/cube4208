
<h2><%=t :sign_in %></h2>

  <div class="span4">
		<div class="facebook-button">
	  	<%= link_to content_tag(:span, "Login with Facebook", :class => 'fb-button-text'), omniauth_authorize_path(:user, :facebook) %>
		</div>
  </div>
  <div class="span4">
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div class="inputs">
		    <%= f.input :email, :required => false, :autofocus => true %>
		    <%= f.input :password, :required => false %>
		    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
		  </div>

		  <div class="actions">
		    <%= f.button :submit, I18n.t("sign_in") %>
		  </div>
		<% end %>

		<%= render "links" %>
	</div>
	

