<%= simple_form_for @organization, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Organization</legend>

		<%= f.input :name %>
		<%= f.input :head_organization_id, :collection => HeadOrganization.all %>
		<%= f.input :facebook_page %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', organizations_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
